<h1> Create a new Article </h1>

<%= form_with model: @article, data: { turbo: false } do |f|%>
  <p>
    <%= f.label :title, "New Title" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description, "New description" %>
    <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create an Article" %>
  </p>

  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from saving:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
