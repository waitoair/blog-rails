<h1> Create a new Article </h1>

<%= form_for @article do |f|%>
  <p>
    <%= f.label :title, "New Title" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description, "New description" %>
    <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create an Article" %>
  </p>
<% end %>
